class Solution {
public:
    int findrow(vector<vector<int>> matrix, int target){
        int m = matrix.size();
        int n = matrix[0].size();
        int l = 0;
        int h = m-1;
        
        while(l <= h){
            int mid = l + (h-l)/2;
            
            if(target < matrix[mid][0])
                h = mid - 1;
            else if(target > matrix[mid][n-1])
                l = mid + 1;
            else
                return mid;
        }
        return -1;
    }
    bool searchMatrix(vector<vector<int>>& matrix, int target) {
        
        int m = matrix.size();
        int n = matrix[0].size();
        
        int r = findrow(matrix, target);
        if(r == -1)
            return false;
        
        int l = 0;
        int h = n-1;
        
        
        while(l <= h){
            int mid = l + (h-l)/2;
            
            if(matrix[r][mid] == target)
                return true;
            else if(matrix[r][mid] >  target)
                h = mid - 1;
            else
                l = mid + 1;
        }
        
        return false;
    }
};
