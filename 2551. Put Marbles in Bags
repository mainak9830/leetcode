class Solution {
public:
    long long putMarbles(vector<int>& weights, int k) {
        int n = weights.size();

        vector<int> partition(n-1,0);
        for(int i = 0;i < n-1;i++){
            partition[i] = weights[i] + weights[i+1];
        }

        sort(partition.begin(), partition.end());
        
        long long ans = 0;
        for(int i = 0;i < k-1;i++){
            ans += (partition[n-2-i]-partition[i]);
        }

        return ans;
    }
};
