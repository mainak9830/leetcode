class Solution {
public:
    int minFlipsMonoIncr(string s) {
        int n = s.length();
        vector<int> dp1(n+1,0), dp2(n+1,0);
        //dp1 ending with 0
        //dp2 ending with 1

        for(int i = 1;i <= n;i++){
            char c = s[i-1];

            if(c == '0'){
                dp1[i] = dp1[i-1];
                dp2[i] = min(dp1[i-1], dp2[i-1]) + 1;
            }else{
                dp1[i] = dp1[i-1] + 1;
                dp2[i] = min(dp1[i-1], dp2[i-1]);
            }
        }


        return min(dp2[n], dp1[n]);
    }
};
